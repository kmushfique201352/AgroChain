<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GovernmentDashboardActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_round_border"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agro Chain"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:gravity="center" />
        <Button
            android:id="@+id/donateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request Donate"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

    <Button
        android:id="@+id/filterButton"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Filter Posts"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/filterButton"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/layoutPosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Dynamic content here -->
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/top_round_border"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="Home"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="@drawable/green_border"/>

        <ImageView
            android:id="@+id/postButton"
            android:layout_width="150px"
            android:layout_height="100px"
            android:src="@drawable/post"
            android:background="@drawable/green_border"
            android:text="Create Post"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/newsButton"
            android:layout_width="150px"
            android:layout_height="100px"
            android:src="@drawable/news"
            android:background="@drawable/green_border"
            android:text="News"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="150px"
            android:layout_height="100px"
            android:src="@drawable/profile"
            android:background="@drawable/green_border"
            android:text="Profile"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
