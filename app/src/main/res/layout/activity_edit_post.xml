<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editPostName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"
            android:backgroundTint="#FFA726"
            android:textColorHint="#9E9E9E"/>

        <EditText
            android:id="@+id/editPostProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product"
            android:inputType="text"
            android:backgroundTint="#FFA726"
            android:textColorHint="#9E9E9E"/>

        <EditText
            android:id="@+id/editPostPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:backgroundTint="#FFA726"
            android:textColorHint="#9E9E9E"/>

        <EditText
            android:id="@+id/editPostQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:inputType="number"
            android:backgroundTint="#FFA726"
            android:textColorHint="#9E9E9E"/>

        <EditText
            android:id="@+id/editPostReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Release Date"
            android:inputType="date"
            android:backgroundTint="#FFA726"
            android:textColorHint="#9E9E9E"/>

        <EditText
            android:id="@+id/editPostNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note"
            android:inputType="textMultiLine"
            android:lines="3"
            android:backgroundTint="#FFA726"
            android:textColorHint="#9E9E9E"/>

        <ImageView
            android:id="@+id/editPostImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_imageview"/>

        <Button
            android:layout_marginTop="80px"
            android:id="@+id/btnSubmitEdit"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:text="Update Post"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
