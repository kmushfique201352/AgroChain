<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editPostName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/editPostProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editPostPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/editPostQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:inputType="number"/>

        <EditText
            android:id="@+id/editPostReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Release Date"
            android:inputType="date"/>

        <EditText
            android:id="@+id/editPostNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note"
            android:inputType="textMultiLine"
            android:lines="3"/>

        <ImageView
            android:id="@+id/editPostImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btnSubmitEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Post"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>
